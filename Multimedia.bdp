Proc AbrirMultimedia(Referencia Archivo,Alias:Cadena,Opcional Tipo:Cadena = "MPEGVideo", Opcional hWnd:Entero):Cadena
  Var cmdToDo,ret,tmp,ShortPath:Cadena
  Var dwReturn,lenShort:Entero

  Si (hWnd=0) hWnd = GetDesktopWindow()
  tmp = Espacio(255)
  ret = Espacio(128)

  lenShort = GetShortPathName(Archivo,tmp,255)
  ShortPath = IzquierdaCad(tmp,lenShort)

  cmdToDo = "open " + ShortPath + " type " + Tipo + " Alias " + Alias + " parent " + EntCad(hWnd) + " Style " + EntCad(&amp;40000000)
  dwReturn = mciSendString(cmdToDo, Nulo, 0, 0)

  Si (dwReturn)
    mciGetErrorString(dwReturn, Ret, 128)
    Resultado = TruncarCadena(Ret)
  SiNo
    Resultado = "OK"
  FinSi
FinProc

Proc ReproducirMultimedia(Referencia Alias:Cadena, Opcional Desde:EnteroSig, Opcional Hasta:EnteroSig=-1):Cadena
  Var cmdToDo,ret:Cadena
  Var dwReturn:Entero

  Si (Hasta=-1) Hasta = CantidadDeCuadros(Alias)
  Si (Alias=iAlias)
    iDesde = Desde
    iHasta = Hasta
  FinSi

  ret = Espacio(128)

  cmdToDo = "play " + Alias + " from " + EntCad(Desde) + " to " + EntCad(Hasta)
  dwReturn = mciSendString(cmdToDo, Nulo, 0, 0)

  Si (dwReturn)
    mciGetErrorString(dwReturn, Ret, 128)
    Resultado = TruncarCadena(Ret)
  SiNo
    Resultado = "OK"
  FinSi
FinProc

